{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "h",
                "hpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls-cache"
                }
            }
        },
        "zig": {
            "command": "zls",
            "filetypes": [
                "zig"
            ]
        }
    },
    "suggest.noselect": false,
    "yaml.format.enable": true,
    "yaml.completion": true,
    "colors.filetypes": ["*"]
}
